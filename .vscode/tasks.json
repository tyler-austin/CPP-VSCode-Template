{
    "version": "2.0.0",
    "command": "g++",
    "args": [
        "-Wall",
        "-o main.out",
        "main.cpp",
        "-std=c++11",
        "&&",
        "./main.out"
    ],
    "type": "shell",
    "presentation": {
        "reveal": "always"
    },
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
            "relative",
            "${workspaceRoot}"
        ],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    },
    "group": {
        "kind": "build",
        "isDefault": true
    }
}
